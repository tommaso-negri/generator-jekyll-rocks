{
  "name": "<%= projectName %>",
  "version": "0.0.0",
  "description": "<%= projectDescription %>",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorUrl %>"
  },
<% if (includeApache) { -%>
  "license": "Apache-2.0",
<% } -%>
<% if (includeGnu) { -%>
  "license": "GPL-3.0-only",
<% } -%>
<% if (includeMit) { -%>
  "license": "MIT",
<% } -%>
  "scripts": {
    "serve": "grunt serve",
    "build": "grunt build",
    "clear": "grunt clear"
  },
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-build-control": "^0.7.1",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-imagemin": "^2.0.1",
    "grunt-contrib-jshint": "^1.1.0",
    "grunt-contrib-nodeunit": "^1.0.0",
<% if (includeSass || includeScss) { -%>
    "grunt-contrib-sass": "^1.0.0",
<% } -%>
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-ftp-upload": "^0.1.1",
    "grunt-jekyll": "^0.4.7",
    "grunt-postcss": "^0.9.0",
    "grunt-shell": "^2.1.0",
    "grunt-svgmin": "^5.0.0",
    "load-grunt-tasks": "^3.5.2",
    "time-grunt": "^1.4.0"
  },
  "dependencies": {
    "autoprefixer": "^7.2.5",
    "cssnano": "^3.10.0",
    "pixrem": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "<%= projectRepo %>"
  }
}
